# Server configuration
PORT=4000
NODE_ENV=development

# OpenStreetMap / Nominatim configuration
# The base URL can stay as the public nominatim instance or point to your own deployment.
OPENSTREETMAP_BASE_URL=https://nominatim.openstreetmap.org

# PostgreSQL configuration
POSTGRES_DB=recycle
POSTGRES_USER=recycle_user
POSTGRES_PASSWORD=recycle_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5428

# Optional connection URI for ORMs or database clients
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Admin Configuration
# The admin user will be seeded automatically on startup if this is set
ADMIN_WALLET_ADDRESS=0xYourAdminWalletAddressHere
ADMIN_NAME=Platform Admin

# Blockchain Configuration (Sepolia Testnet)
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/<PROJECT_ID>
BLOCKCHAIN_PRIVATE_KEY=0x<platform-operator-private-key>
PICKUP_MANAGER_ADDRESS=0x<deployed-pickup-manager-address>
GREEN_REWARD_ADDRESS=0x<deployed-green-reward-address>

